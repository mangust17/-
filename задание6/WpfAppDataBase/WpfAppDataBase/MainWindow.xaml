<Window x:Class="WpfApp.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local="clr-namespace:WpfApp"
mc:Ignorable="d"
FontSize="18"
Title="MainWindow" Height="450" Width="346">
    <StackPanel Margin="32" VerticalAlignment="Center">
        <Label>Логин</Label>
        <TextBox x:Name="login_tb" TextWrapping="NoWrap"/>
        <Label>Пароль</Label>
        <TextBox x:Name="password_tb" TextWrapping="NoWrap"/>
        <Button Click="Button_Click" Margin="0, 16, 0, 0" Padding="8">Войти</Button>
    </StackPanel>
</Window>
